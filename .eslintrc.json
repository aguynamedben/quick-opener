{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "@typescript-eslint/ban-ts-comment": 0,
    "@typescript-eslint/ban-ts-ignore": 0,
    "@typescript-eslint/ban-types": 0,
    "@typescript-eslint/camelcase": 0,
    "@typescript-eslint/explicit-function-return-type": 0,
    "@typescript-eslint/explicit-module-boundary-types": 0,
    "@typescript-eslint/member-delimiter-style": 0,
    "@typescript-eslint/naming-convention": "warn",
    "@typescript-eslint/no-empty-function": 0,
    "@typescript-eslint/no-explicit-any": 0,
    "@typescript-eslint/no-non-null-assertion": 0,
    "@typescript-eslint/no-this-alias": 0,
    "@typescript-eslint/no-unused-vars": [2, { "ignoreRestSiblings": true, "args": "none" }],
    "@typescript-eslint/no-use-before-define": 0,
    "@typescript-eslint/prefer-includes": 0,
    "@typescript-eslint/prefer-regexp-exec": 0,
    "@typescript-eslint/prefer-string-starts-ends-with": 0,
    "@typescript-eslint/semi": ["warn", "never"],
    "@typescript-eslint/unbound-method": 0,
    "array-bracket-spacing": 2,
    "array-callback-return": 1,
    "arrow-body-style": 0,
    "arrow-parens": 0,
    "arrow-spacing": 2,
    "block-scoped-var": 2,
    "block-spacing": 2,
    "camelcase": 0,
    "class-methods-use-this": 0,
    "comma-dangle": [2, "only-multiline"],
    "comma-spacing": 2,
    "comma-style": [2, "last"],
    "computed-property-spacing": 2,
    "consistent-return": 0,
    "constructor-super": 2,
    "curly": "warn",
    "default-case": 0,
    "dot-location": [2, "property"],
    "dot-notation": 0,
    "eqeqeq": [2, "smart"],
    "func-call-spacing": [2, "never"],
    "func-names": 0,
    "func-style": [2, "declaration", { "allowArrowFunctions": true }],
    "function-paren-newline": 0,
    "generator-star-spacing": 2,
    "global-require": 0,
    "indent": [2, 2, { "SwitchCase": 1, "VariableDeclarator": { "var": 2, "let": 2, "const": 3 }, "flatTernaryExpressions": true }],
    "key-spacing": 2,
    "keyword-spacing": [2, { "before": true, "after": true, "overrides": {} }],
    "linebreak-style": 2,
    "lines-between-class-members": 0,
    "max-classes-per-file": 0,
    "max-len": [1, { "code": 120, "tabWidth": 2, "ignoreComments": true, "ignoreStrings": true, "ignoreTemplateLiterals": true, "ignoreRegExpLiterals": true }],
    "new-cap": 0,
    "new-parens": 2,
    "no-alert": 0,
    "no-case-declarations": 0,
    "no-class-assign": 2,
    "no-confusing-arrow": 2,
    "no-console": 0,
    "no-constant-condition": 1,
    "no-duplicate-imports": 2,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-extra-label": 2,
    "no-fallthrough": 2,
    "no-func-assign": 0,
    "no-implied-eval": 2,
    "no-invalid-this": 0,
    "no-label-var": 2,
    "no-lone-blocks": 2,
    "no-lonely-if": 2,
    "no-loop-func": 2,
    "no-mixed-operators": 0,
    "no-multi-assign": 0,
    "no-multi-spaces": [2, { "ignoreEOLComments": true }],
    "no-multiple-empty-lines": 2,
    "no-nested-ternary": 0,
    "no-new-object": 2,
    "no-param-reassign": 0,
    "no-plusplus": 0,
    "no-self-compare": 2,
    "no-shadow": 0,
    "no-shadow-restricted-names": 2,
    "no-tabs": 2,
    "no-throw-literal": "warn",
    "no-trailing-spaces": 2,
    "no-underscore-dangle": 0,
    "no-unexpected-multiline": 2,
    "no-unmodified-loop-condition": 2,
    "no-unneeded-ternary": 2,
    "no-unused-expressions": 0, // avoid errors o nchai expressions
    "no-unused-vars": 0,
    "no-use-before-define": 0,
    "no-useless-call": 2,
    "no-useless-computed-key": 2,
    "no-useless-concat": 2,
    "no-useless-constructor": 2,
    "no-useless-rename": 2,
    "no-useless-return": 2,
    "no-var": 0,
    "no-whitespace-before-property": 2,
    "object-curly-newline": 2,
    "object-curly-spacing": [2, "always"],
    "object-shorthand": 0,
    "one-var": 0,
    "operator-assignment": 2,
    "operator-linebreak": 0,
    "prefer-const": [1, { "destructuring": "all" }],
    "prefer-object-spread": 0,
    "prefer-promise-reject-errors": [2, { "allowEmptyReject": true }],
    "prefer-rest-params": 0,
    "prefer-spread": 0,
    "prefer-template": 0,
    "quote-props": [2, "consistent"],
    "quotes": [2, "single", { "allowTemplateLiterals": true }],
    "radix": 2,
    "rest-spread-spacing": 2,
    "semi": [2, "never"],
    "space-before-blocks": 2,
    "space-before-function-paren": [2, { "anonymous": "never", "named": "never", "asyncArrow": "always" }],
    "space-infix-ops": 2,
    "switch-colon-spacing": 2,
    "template-curly-spacing": 2,
    "valid-jsdoc": 0,
    "yield-star-spacing": 2,
    "yoda": 2
  },
  "ignorePatterns": ["out", "dist", "**/*.d.ts"]
}
